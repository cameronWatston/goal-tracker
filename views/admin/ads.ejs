<!-- Ad Management Admin Page -->
<div class="ads-admin-page">
    <!-- Header Section -->
    <div class="page-header">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="header-content">
                        <nav aria-label="breadcrumb">
