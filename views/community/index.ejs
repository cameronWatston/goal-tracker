<!-- Modern Community Page with Stunning Design -->
<div class="community-page">

<% style = `<link rel="stylesheet" href="/css/community-ai.css">` %>
<% script = `<script src="/js/community.js"></script>` %>

    <!-- Hero Section -->
    <section class="community-hero">
        <div class="hero-background-animated">
            <div class="floating-shapes">
                <div class="shape shape-1"></div>
                <div class="shape shape-2"></div>
                <div class="shape shape-3"></div>
            </div>
        </div>
<div class="container">
            <div class="hero-content text-center">
                <div class="hero-badge mb-4">
                    <span class="badge-text">
                        <i class="fas fa-users me-2"></i>
                        Join Our Thriving Community
                    </span>
                        </div>
                <h1 class="hero-title">Connect. Share. Achieve.</h1>
                <p class="hero-subtitle mb-4">
                    Join thousands of goal achievers sharing their journeys, celebrating wins, and supporting each other every step of the way.
                </p>
                <div class="hero-actions">
                    <a href="/community/create" class="btn btn-primary-gradient btn-xl">
                        <i class="fas fa-plus me-2"></i>Create Post
                    </a>
                    <a href="#community-feed" class="btn btn-outline-white btn-xl">
                        <i class="fas fa-arrow-down me-2"></i>Explore Posts
                            </a>
                        </div>
                    </div>
                </div>
    </section>

    <!-- Advanced Search Section -->
    <section class="community-search">
        <div class="container">
            <div class="search-header">
                <h3 class="search-title">
                    <i class="fas fa-search me-2"></i>
                    Find Your Community
                </h3>
                <p class="search-subtitle">Search posts, discover hashtags, connect with goal achievers</p>
            </div>

            <div class="search-container">
                <div class="main-search">
                    <div class="search-input-wrapper">
                        <i class="fas fa-search search-icon"></i>
                        <input type="text" 
                               class="search-input" 
                               id="communitySearch" 
                               placeholder="Search posts, hashtags (#fitness), or users..."
                               value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
                        <button class="search-clear" id="clearSearch" style="display: none;">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>

                    <div class="search-filters">
                        <button class="filter-btn active" data-filter="all">
                            <i class="fas fa-globe"></i>
                            <span>All Posts</span>
                        </button>
                        <button class="filter-btn" data-filter="hashtags">
                            <i class="fas fa-hashtag"></i>
                            <span>Hashtags</span>
                        </button>
                        <button class="filter-btn" data-filter="users">
                            <i class="fas fa-users"></i>
                            <span>Users</span>
                        </button>
                        <button class="filter-btn" data-filter="goals">
                            <i class="fas fa-target"></i>
                            <span>Goals</span>
                        </button>
        </div>
    </div>

                <div class="trending-section">
                    <h5 class="trending-title">
                        <i class="fas fa-fire me-2"></i>
                        Trending Now
                    </h5>
                    <div class="trending-hashtags">
                        <span class="trending-tag" data-hashtag="fitness">#fitness</span>
                        <span class="trending-tag" data-hashtag="productivity">#productivity</span>
                        <span class="trending-tag" data-hashtag="learning">#learning</span>
                        <span class="trending-tag" data-hashtag="business">#business</span>
                        <span class="trending-tag" data-hashtag="health">#health</span>
                        <span class="trending-tag" data-hashtag="motivation">#motivation</span>
                        <span class="trending-tag" data-hashtag="success">#success</span>
                        <span class="trending-tag" data-hashtag="mindfulness">#mindfulness</span>
                    </div>
                </div>

                <!-- AI Assistant for Paid Users -->
                <div class="ai-assistant-section">
                    <% if (user && (user.subscription_plan === 'monthly' || user.subscription_plan === 'annual')) { %>
                        <div class="ai-assistant-card">
                            <div class="ai-header">
                                <div class="ai-icon">
                                    <i class="fas fa-robot"></i>
                                </div>
                                <div class="ai-info">
                                    <h6 class="ai-title">Goal Assistant AI</h6>
                                    <p class="ai-subtitle">Get personalized advice for your goals</p>
                                </div>
                                <span class="pro-badge">PRO</span>
                            </div>
                            <button class="ai-chat-btn" id="openAiChat">
                                <i class="fas fa-comments me-2"></i>
                                Start AI Chat
                            </button>
                        </div>
                    <% } else { %>
                        <div class="ai-assistant-card locked">
                            <div class="ai-header">
                                <div class="ai-icon locked">
                                    <i class="fas fa-lock"></i>
                                </div>
                                <div class="ai-info">
                                    <h6 class="ai-title">Goal Assistant AI</h6>
                                    <p class="ai-subtitle">Available for Pro members</p>
                                </div>
                                <span class="upgrade-badge">UPGRADE</span>
                            </div>
                            <a href="/subscription" class="ai-upgrade-btn">
                                <i class="fas fa-crown me-2"></i>
                                Upgrade to Pro
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Search Results Section -->
            <div class="search-results" id="searchResults" style="display: none;">
                <div class="results-header">
                    <h5 class="results-title">Search Results</h5>
                    <span class="results-count" id="resultsCount">0 results</span>
                </div>
                <div class="results-container" id="resultsContainer">
                    <!-- Results will be populated here -->
                </div>
            </div>
        </div>
    </section>

    <!-- Alerts -->
    <% if (typeof success !== 'undefined' && success) { %>
    <div class="container">
        <div class="modern-alert success">
            <i class="fas fa-check-circle"></i>
            <span><%= success %></span>
            <button type="button" class="alert-close" onclick="this.parentElement.style.display='none'">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <% } %>

    <% if (typeof error !== 'undefined' && error) { %>
    <div class="container">
        <div class="modern-alert error">
            <i class="fas fa-exclamation-circle"></i>
            <span><%= error %></span>
            <button type="button" class="alert-close" onclick="this.parentElement.style.display='none'">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <% } %>

        <!-- Main Content -->
    <section class="community-content" id="community-feed">
        <div class="container">
            <div class="row">
                <!-- Main Feed -->
                <div class="col-lg-8">
                    <div class="feed-header">
                        <h2 class="feed-title">Community Feed</h2>
                        <p class="feed-subtitle">Latest updates from our amazing community</p>
                    </div>

            <% if (posts && posts.length > 0) { %>
                        <div class="posts-container">
                <% posts.forEach(post => { %>
                                <article class="post-card">
                                    <div class="post-header">
                                        <div class="author-info">
                                            <div class="author-avatar">
                                                <div class="avatar-circle">
                                                    <%= post.username.charAt(0).toUpperCase() %>
                            </div>
                        </div>
                                            <div class="author-details">
                                                <h5 class="author-name"><%= post.username %></h5>
                                                <p class="post-date">
                                                    <i class="far fa-clock me-1"></i>
                                                    <%= new Date(post.created_at).toLocaleDateString('en-US', { 
                                                        month: 'short', 
                                                        day: 'numeric', 
                                                        year: 'numeric' 
                                                    }) %>
                                                </p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="post-content">
                                        <h3 class="post-title"><%= post.title %></h3>
                                        <p class="post-text">
                                <%= post.content.length > 200 ? post.content.substring(0, 200) + '...' : post.content %>
                            </p>
                            
                            <% if (post.goal_id && post.goalData) { %>
                                            <div class="linked-goal">
                                                <div class="goal-badge">
                                                    <i class="fas fa-bullseye me-2"></i>
                                                    <span class="goal-title">Linked Goal: <%= post.goalData.title %></span>
                                                    <span class="goal-status status-<%= post.goalData.status %>">
                                            <%= post.goalData.status.charAt(0).toUpperCase() + post.goalData.status.slice(1) %>
                                        </span>
                                    </div>
                                </div>
                            <% } %>
                                    </div>

                                    <div class="post-actions">
                                        <button class="action-btn like-btn <%= post.user_liked ? 'liked' : '' %>" data-post-id="<%= post.id %>">
                                            <i class="<%= post.user_liked ? 'fas' : 'far' %> fa-heart"></i>
                                            <span class="action-text">
                                                <%= post.user_liked ? 'Liked' : 'Like' %>
                                        <% if (post.like_count > 0) { %>
                                                    <span class="like-count">(<%= post.like_count %>)</span>
                                        <% } %>
                                            </span>
                                    </button>
                                        <a href="/community/post/<%= post.id %>" class="action-btn comment-btn">
                                            <i class="far fa-comment"></i>
                                            <span class="action-text">
                                                Comment
                                        <% if (post.comments && post.comments.length > 0) { %>
                                                    (<%= post.comments.length %>)
                                        <% } %>
                                            </span>
                                        </a>
                                        <a href="/community/post/<%= post.id %>" class="read-more-btn">
                                            Read Full Post
                                            <i class="fas fa-arrow-right ms-1"></i>
                                    </a>
                                </div>
                                </article>
                <% }); %>
                        </div>
            <% } else { %>
                        <div class="empty-state">
                            <div class="empty-icon">
                                <i class="fas fa-users"></i>
                    </div>
                            <h3 class="empty-title">No posts yet</h3>
                            <p class="empty-subtitle">Be the first to share something amazing with the community!</p>
                            <a href="/community/create" class="btn btn-primary-gradient">
                                <i class="fas fa-plus me-2"></i>Create First Post
                            </a>
                </div>
            <% } %>
        </div>

        <!-- Sidebar -->
                <div class="col-lg-4">
                    <div class="sidebar">
                        <!-- Quick Actions -->
                        <div class="sidebar-card">
                <div class="card-header">
                                <h4 class="card-title">
                                    <i class="fas fa-bolt me-2"></i>Quick Actions
                                </h4>
                </div>
                            <div class="card-content">
                                <div class="action-buttons">
                                    <a href="/community/create" class="action-button primary">
                                        <i class="fas fa-plus-circle"></i>
                                        <span>Create New Post</span>
                                    </a>
                                    <a href="/community/my-posts" class="action-button secondary">
                                        <i class="fas fa-user"></i>
                                        <span>My Posts</span>
                        </a>
                    </div>
                </div>
            </div>

                        <!-- Community Guidelines -->
                        <div class="sidebar-card">
                <div class="card-header">
                                <h4 class="card-title">
                                    <i class="fas fa-info-circle me-2"></i>Community Guidelines
                                </h4>
                </div>
                            <div class="card-content">
                                <p class="guidelines-intro">Join our supportive community of goal achievers!</p>
                                <div class="guidelines-list">
                                    <div class="guideline-item">
                                        <i class="fas fa-heart text-success"></i>
                                        <span>Be respectful and supportive</span>
                </div>
                                    <div class="guideline-item">
                                        <i class="fas fa-share text-primary"></i>
                                        <span>Share achievements and challenges</span>
            </div>
                                    <div class="guideline-item">
                                        <i class="fas fa-question-circle text-info"></i>
                                        <span>Ask for advice when needed</span>
                                    </div>
                                    <div class="guideline-item">
                                        <i class="fas fa-trophy text-warning"></i>
                                        <span>Celebrate others' successes</span>
                                    </div>
        </div>
    </div>

                        <!-- Top Contributors -->
                        <div class="sidebar-card">
                            <div class="card-header">
                                <h4 class="card-title">
                                    <i class="fas fa-star me-2"></i>Top Contributors
                                </h4>
                            </div>
                            <div class="card-content">
                                <div class="contributors-list">
                                    <% if (topContributors && topContributors.length > 0) { %>
                                        <% topContributors.forEach((contributor, index) => { %>
                                            <div class="contributor-item">
                                                <div class="contributor-avatar"><%= contributor.avatar %></div>
                                                <div class="contributor-info">
                                                    <div class="contributor-name"><%= contributor.username %></div>
                                                    <div class="contributor-stats">
                                                        <%= contributor.community_posts %> post<%= contributor.community_posts !== 1 ? 's' : '' %>
                                                    </div>
                                                </div>
                                                <div class="contributor-badge"><%= contributor.badge %></div>
                                            </div>
                                        <% }); %>
                                    <% } else { %>
                                        <div class="empty-state text-center py-4">
                                            <i class="fas fa-users text-muted mb-2" style="font-size: 2rem;"></i>
                                            <p class="text-muted mb-0">No contributors yet.</p>
                                            <small class="text-muted">Be the first to complete some goals!</small>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- Ultra-Modern CSS for Stunning Community Page -->
<style>
:root {
    --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    --success-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    --dark-gradient: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
    --text-dark: #2c3e50;
    --text-light: #6c757d;
    --white: #ffffff;
    --border-radius: 20px;
    --box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
    --transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
}

/* Community Page Styles */
.community-page {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    line-height: 1.6;
    color: var(--text-dark);
}

/* Hero Section */
.community-hero {
    position: relative;
    min-height: 70vh;
    overflow: hidden;
    display: flex;
    align-items: center;
}

.hero-background-animated {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--primary-gradient);
    z-index: -1;
}

.floating-shapes {
    position: absolute;
    width: 100%;
    height: 100%;
}

.shape {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    animation: float 15s infinite linear;
}

.shape-1 {
    width: 80px;
    height: 80px;
    top: 20%;
    left: 15%;
    animation-delay: 0s;
}

.shape-2 {
    width: 120px;
    height: 120px;
    top: 60%;
    right: 20%;
    animation-delay: 5s;
}

.shape-3 {
    width: 60px;
    height: 60px;
    bottom: 30%;
    left: 70%;
    animation-delay: 10s;
}

@keyframes float {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    33% { transform: translate(20px, -20px) rotate(120deg); }
    66% { transform: translate(-15px, 15px) rotate(240deg); }
}

.hero-content {
    position: relative;
    z-index: 1;
    color: white;
    padding: 60px 0;
}

.hero-badge {
    animation: slideInDown 1s ease-out;
}

.badge-text {
    display: inline-flex;
    align-items: center;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: white;
    padding: 12px 24px;
    border-radius: 50px;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.hero-title {
    font-size: 3.5rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    animation: slideInUp 1s ease-out 0.2s both;
}

.hero-subtitle {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 400;
    max-width: 600px;
    margin: 0 auto;
    animation: slideInUp 1s ease-out 0.4s both;
}

.hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    animation: slideInUp 1s ease-out 0.6s both;
}

/* Button Styles */
.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 16px 32px;
    border-radius: 50px;
    font-weight: 600;
    font-size: 16px;
    text-decoration: none;
    transition: var(--transition);
    border: none;
    cursor: pointer;
}

.btn-xl {
    padding: 20px 40px;
    font-size: 18px;
}

.btn-primary-gradient {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
}

.btn-primary-gradient:hover {
    transform: translateY(-3px);
    box-shadow: 0 20px 40px rgba(102, 126, 234, 0.6);
    color: white;
    text-decoration: none;
}

.btn-outline-white {
    background: transparent;
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(20px);
}

.btn-outline-white:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-3px);
    color: white;
    text-decoration: none;
}

/* Community Stats */
.community-stats {
    padding: 80px 0;
    background: white;
    margin-top: -50px;
    position: relative;
    z-index: 2;
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
}

.stat-card {
    background: white;
    padding: 2rem 1.5rem;
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);
    text-align: center;
    transition: var(--transition);
    border: 1px solid rgba(0, 0, 0, 0.05);
}

.stat-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 30px 80px rgba(0, 0, 0, 0.15);
}

.stat-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
}

.stat-number {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--text-dark);
    margin-bottom: 0.5rem;
    display: block;
}

.stat-label {
    color: var(--text-light);
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

/* Modern Alerts */
.modern-alert {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    border-radius: 12px;
    margin-bottom: 2rem;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    position: relative;
}

.modern-alert.success {
    background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
    color: #155724;
    border-left: 4px solid #28a745;
}

.modern-alert.error {
    background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
    color: #721c24;
    border-left: 4px solid #dc3545;
}

.alert-close {
    background: none;
    border: none;
    font-size: 1.2rem;
    cursor: pointer;
    color: inherit;
    margin-left: auto;
}

/* Community Content */
.community-content {
    padding: 80px 0;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}

.feed-header {
    text-align: center;
    margin-bottom: 3rem;
}

.feed-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--text-dark);
    margin-bottom: 1rem;
}

.feed-subtitle {
    font-size: 1.2rem;
    color: var(--text-light);
}

/* Post Cards */
.posts-container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.post-card {
    background: white;
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);
    overflow: hidden;
    transition: var(--transition);
    border: 1px solid rgba(0, 0, 0, 0.05);
}

.post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 30px 80px rgba(0, 0, 0, 0.15);
}

.post-header {
    padding: 1.5rem 2rem 0;
}

.author-info {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.author-avatar {
    flex-shrink: 0;
}

.avatar-circle {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: var(--primary-gradient);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 1.2rem;
}

.author-name {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--text-dark);
    margin: 0;
}

.post-date {
    color: var(--text-light);
    font-size: 0.9rem;
    margin: 0;
}

.post-content {
    padding: 1.5rem 2rem;
}

.post-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: 1rem;
    line-height: 1.3;
}

.post-text {
    color: var(--text-light);
    line-height: 1.6;
    margin-bottom: 1.5rem;
}

.linked-goal {
    margin-bottom: 1rem;
}

.goal-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
    padding: 0.75rem 1rem;
    border-radius: 12px;
    border-left: 4px solid #2196f3;
    font-size: 0.9rem;
}

.goal-title {
    font-weight: 600;
    color: var(--text-dark);
}

.goal-status {
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.status-completed {
    background: var(--success-gradient);
    color: white;
}

.status-active {
    background: var(--primary-gradient);
    color: white;
}

.status-abandoned {
    background: var(--secondary-gradient);
    color: white;
}

.post-actions {
    padding: 0 2rem 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
}

.action-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 25px;
    font-size: 0.9rem;
    font-weight: 600;
    border: 2px solid #e9ecef;
    background: white;
    color: var(--text-dark);
    text-decoration: none;
    transition: var(--transition);
    cursor: pointer;
}

.action-btn:hover {
    border-color: #667eea;
    color: #667eea;
    text-decoration: none;
    transform: translateY(-2px);
}

.action-btn.liked {
