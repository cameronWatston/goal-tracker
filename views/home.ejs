/* Ultra-Modern How It Works Section */
.home-how-it-works {
    padding: 8rem 0;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    position: relative;
    overflow: hidden;
}

.home-how-it-works::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
        radial-gradient(circle at 30% 20%, rgba(102, 126, 234, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 70% 80%, rgba(139, 92, 246, 0.1) 0%, transparent 50%);
    animation: howItWorksBg 20s ease-in-out infinite;
}

@keyframes howItWorksBg {
    0%, 100% { transform: translateX(0) translateY(0); }
    50% { transform: translateX(20px) translateY(-20px); }
}

.home-steps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 4rem;
    margin-top: 4rem;
    position: relative;
}

.home-step {
    text-align: center;
    position: relative;
    animation: fadeInUp 1s ease-out;
}

.home-step:nth-child(2) {
    animation-delay: 0.2s;
}

.home-step:nth-child(3) {
    animation-delay: 0.4s;
}

.home-step-number {
    width: 5rem;
    height: 5rem;
    background: var(--gradient-primary);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    font-weight: 900;
    margin: 0 auto 2rem;
    box-shadow: 0 15px 40px rgba(102, 126, 234, 0.4);
    position: relative;
    transition: var(--transition);
}

.home-step-number::before {
    content: '';
    position: absolute;
    top: -10px;
    left: -10px;
