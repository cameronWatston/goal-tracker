<!-- Ultra-Modern Self-Contained Home Page -->
<style>
/* Reset and base styles for this page only */
.home-page {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.6;
    color: #1a202c;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    overflow-x: hidden;
}

.home-page *,
.home-page *::before,
.home-page *::after {
    box-sizing: border-box;
}

/* Ultra-Modern CSS Variables */
.home-page {
    --primary-blue: #2563eb;
    --primary-purple: #7c3aed;
    --gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    --gradient-secondary: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    --gradient-tertiary: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    --gradient-dark: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
    --text-dark: #1a202c;
    --text-gray: #4a5568;
    --text-light: #718096;
    --bg-white: #ffffff;
    --bg-gray-50: #f7fafc;
    --bg-gray-100: #edf2f7;
    --border-gray: #e2e8f0;
    --shadow-sm: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    --shadow-glow: 0 0 50px rgba(102, 126, 234, 0.3);
    --radius-sm: 0.375rem;
    --radius-md: 0.5rem;
    --radius-lg: 0.75rem;
    --radius-xl: 1rem;
    --radius-2xl: 1.5rem;
    --transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
    --transition-bounce: all 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

/* Floating Particles Background */
.home-page::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.3) 0%, transparent 50%),
                radial-gradient(circle at 40% 40%, rgba(120, 219, 255, 0.3) 0%, transparent 50%);
    pointer-events: none;
    z-index: -1;
    animation: floatingBg 20s ease-in-out infinite;
}

@keyframes floatingBg {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    33% { transform: translateY(-30px) rotate(1deg); }
    66% { transform: translateY(30px) rotate(-1deg); }
}

/* Hero Section with Advanced Effects */
.home-hero {
    background: var(--gradient-primary);
    color: white;
    padding: 8rem 0 6rem;
    position: relative;
    overflow: hidden;
    min-height: 100vh;
    display: flex;
    align-items: center;
}

.home-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
        radial-gradient(circle at 25% 25%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 75% 75%, rgba(255, 255, 255, 0.05) 0%, transparent 50%),
        url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
    opacity: 0.4;
    animation: heroPattern 30s linear infinite;
}

@keyframes heroPattern {
    0% { transform: translateX(0) translateY(0); }
    100% { transform: translateX(-100px) translateY(-100px); }
}

.home-hero-content {
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    text-align: center;
}

.home-hero h1 {
    font-size: 4rem;
    font-weight: 900;
    margin-bottom: 2rem;
    line-height: 1.1;
    background: linear-gradient(135deg, #ffffff 0%, #f0f9ff 50%, #e0e7ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: titleGlow 3s ease-in-out infinite alternate;
    text-shadow: 0 0 30px rgba(255, 255, 255, 0.5);
}

@keyframes titleGlow {
    0% { filter: brightness(1) drop-shadow(0 0 20px rgba(255, 255, 255, 0.3)); }
    100% { filter: brightness(1.1) drop-shadow(0 0 30px rgba(255, 255, 255, 0.5)); }
}

.home-hero p {
    font-size: 1.4rem;
    margin-bottom: 3rem;
    opacity: 0.95;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    font-weight: 400;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
    animation: fadeInUp 1s ease-out 0.5s both;
}

.home-hero-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
    animation: fadeInUp 1s ease-out 0.8s both;
}

.home-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1.2rem 2.5rem;
    border-radius: var(--radius-2xl);
    font-weight: 700;
    text-decoration: none;
    transition: var(--transition-bounce);
    border: none;
    cursor: pointer;
    font-size: 1.1rem;
    position: relative;
    overflow: hidden;
    text-transform: none;
    letter-spacing: 0.5px;
}

.home-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
}

.home-btn:hover::before {
    left: 100%;
}

.home-btn-primary {
    background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
    color: var(--primary-blue);
    box-shadow: 0 10px 40px rgba(255, 255, 255, 0.3), 0 0 0 1px rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.2);
}

.home-btn-primary:hover {
    transform: translateY(-5px) scale(1.05);
    box-shadow: 0 20px 60px rgba(255, 255, 255, 0.4), 0 0 0 1px rgba(255, 255, 255, 0.2);
    text-decoration: none;
    color: var(--primary-blue);
}

.home-btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
}

.home-btn-secondary:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.6);
    transform: translateY(-5px) scale(1.05);
    text-decoration: none;
    color: white;
    box-shadow: 0 20px 60px rgba(255, 255, 255, 0.2);
}

/* Glassmorphism Features Section */
.home-features {
    padding: 8rem 0;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    position: relative;
}

.home-features::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
        radial-gradient(circle at 20% 20%, rgba(102, 126, 234, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(139, 92, 246, 0.1) 0%, transparent 50%);
    pointer-events: none;
}

.home-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    position: relative;
    z-index: 1;
}

.home-section-header {
    text-align: center;
    margin-bottom: 5rem;
    animation: fadeInUp 1s ease-out;
}

.home-section-badge {
    display: inline-block;
    background: var(--gradient-primary);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: var(--radius-2xl);
    font-size: 0.9rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.5rem;
    box-shadow: var(--shadow-glow);
    animation: badgePulse 2s ease-in-out infinite;
}

@keyframes badgePulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
}

.home-section-title {
    font-size: 3rem;
    font-weight: 900;
    color: var(--text-dark);
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, #1a202c 0%, #2d3748 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.home-section-subtitle {
    font-size: 1.25rem;
    color: var(--text-gray);
    max-width: 700px;
    margin: 0 auto;
    font-weight: 400;
    line-height: 1.7;
}

.home-features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2.5rem;
}

.home-feature-card {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    padding: 3rem 2.5rem;
    border-radius: var(--radius-2xl);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    transition: var(--transition);
    border: 1px solid rgba(255, 255, 255, 0.2);
    position: relative;
    overflow: hidden;
    animation: fadeInUp 1s ease-out;
}

.home-feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--gradient-primary);
    transform: scaleX(0);
    transition: transform 0.3s ease;
}

.home-feature-card:hover::before {
    transform: scaleX(1);
}

.home-feature-card:hover {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 20px 60px rgba(102, 126, 234, 0.2);
    background: rgba(255, 255, 255, 0.9);
}

.home-feature-icon {
    width: 4rem;
    height: 4rem;
    background: var(--gradient-primary);
    border-radius: var(--radius-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 2rem;
    color: white;
    font-size: 1.8rem;
    box-shadow: var(--shadow-glow);
    transition: var(--transition);
}

.home-feature-card:hover .home-feature-icon {
    transform: rotate(360deg) scale(1.1);
    box-shadow: 0 0 60px rgba(102, 126, 234, 0.5);
}

.home-feature-title {
    font-size: 1.4rem;
    font-weight: 800;
    color: var(--text-dark);
    margin-bottom: 1rem;
    line-height: 1.3;
}

.home-feature-description {
    color: var(--text-gray);
    line-height: 1.7;
    font-size: 1rem;
}

/* Ultra-Modern Pricing Section */
.home-pricing {
    padding: 8rem 0;
    background: var(--gradient-dark);
    color: white;
    position: relative;
    overflow: hidden;
}

.home-pricing::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
        radial-gradient(circle at 30% 30%, rgba(102, 126, 234, 0.2) 0%, transparent 50%),
        radial-gradient(circle at 70% 70%, rgba(139, 92, 246, 0.2) 0%, transparent 50%);
    animation: pricingBg 15s ease-in-out infinite;
}

@keyframes pricingBg {
    0%, 100% { transform: scale(1) rotate(0deg); }
    50% { transform: scale(1.1) rotate(1deg); }
}

.home-pricing .home-section-badge {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.home-pricing .home-section-title {
    color: white;
    background: linear-gradient(135deg, #ffffff 0%, #e2e8f0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.home-pricing .home-section-subtitle {
    color: rgba(255, 255, 255, 0.8);
}

.home-pricing-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    margin: 3rem 0 4rem;
    animation: fadeInUp 1s ease-out 0.3s both;
}

.home-toggle-label {
    font-weight: 700;
    color: white;
    font-size: 1.1rem;
}

.home-toggle-switch {
    position: relative;
    width: 4rem;
    height: 2rem;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 2rem;
    cursor: pointer;
    transition: var(--transition);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
}

.home-toggle-switch.active {
    background: var(--gradient-secondary);
    box-shadow: 0 0 30px rgba(240, 147, 251, 0.5);
}

.home-toggle-slider {
    position: absolute;
    top: 3px;
    left: 3px;
    width: 1.5rem;
    height: 1.5rem;
    background: white;
    border-radius: 50%;
    transition: var(--transition-bounce);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

.home-toggle-switch.active .home-toggle-slider {
    transform: translateX(2rem);
}

.home-save-badge {
    background: var(--gradient-secondary);
    color: white;
    padding: 0.4rem 1rem;
    border-radius: var(--radius-xl);
    font-size: 0.8rem;
    font-weight: 700;
    margin-left: 0.75rem;
    box-shadow: 0 0 20px rgba(240, 147, 251, 0.4);
    animation: saveBadgePulse 2s ease-in-out infinite;
}

@keyframes saveBadgePulse {
    0%, 100% { transform: scale(1); box-shadow: 0 0 20px rgba(240, 147, 251, 0.4); }
    50% { transform: scale(1.05); box-shadow: 0 0 30px rgba(240, 147, 251, 0.6); }
}

.home-pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2.5rem;
    max-width: 1200px;
    margin: 0 auto;
    align-items: stretch;
    padding-top: 2rem;
}

.home-pricing-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 2px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-2xl);
    padding: 3rem 2.5rem;
    position: relative;
    transition: var(--transition);
    overflow: visible;
    animation: fadeInUp 1s ease-out;
    display: flex;
    flex-direction: column;
    min-height: 600px;
    margin-top: 1.5rem;
}

.home-pricing-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
    opacity: 0;
    transition: opacity 0.3s ease;
}

.home-pricing-card:hover::before {
    opacity: 1;
}

.home-pricing-card:hover {
    border-color: rgba(255, 255, 255, 0.4);
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 30px 80px rgba(0, 0, 0, 0.3);
}

.home-pricing-card.featured {
    border-color: var(--gradient-secondary);
    transform: scale(1.05);
    box-shadow: 0 30px 80px rgba(240, 147, 251, 0.3);
    background: rgba(255, 255, 255, 0.15);
    margin-top: 1.5rem;
    position: relative;
    z-index: 5;
}

.home-popular-badge {
    position: absolute;
    top: -1.5rem;
    left: 50%;
    transform: translateX(-50%);
    background: var(--gradient-secondary);
    color: white;
    padding: 0.75rem 2rem;
    border-radius: var(--radius-2xl);
    font-size: 0.9rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    box-shadow: 0 10px 30px rgba(240, 147, 251, 0.5);
    animation: popularBadge 3s ease-in-out infinite;
    z-index: 10;
    white-space: nowrap;
}

@keyframes popularBadge {
    0%, 100% { transform: translateX(-50%) scale(1); }
    50% { transform: translateX(-50%) scale(1.05); }
}

/* Animations */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Responsive Design */
@media (max-width: 768px) {
    .home-hero h1 {
        font-size: 2.8rem;
    }
    
    .home-hero p {
        font-size: 1.2rem;
    }
    
    .home-hero-buttons {
        flex-direction: column;
        align-items: center;
    }
    
    .home-btn {
        width: 100%;
        max-width: 320px;
        justify-content: center;
    }
    
    .home-section-title {
        font-size: 2.2rem;
    }
    
    .home-features-grid,
    .home-pricing-grid {
        grid-template-columns: 1fr;
        gap: 2rem;
        padding-top: 3rem;
    }
    
    .home-pricing-card {
        min-height: auto;
        padding: 2.5rem 2rem;
        margin-top: 2rem;
    }
    
    .home-pricing-card.featured {
        transform: none;
        margin-top: 2rem;
    }
    
    .home-pricing-toggle {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
    }
    
    .home-contact-grid {
        grid-template-columns: 1fr;
        gap: 3rem;
    }
    
    .home-contact-form {
        padding: 2rem;
    }
    
    .home-contact-item {
        padding: 1.5rem;
        flex-direction: column;
        text-align: center;
    }
    
    .home-steps-grid {
        gap: 3rem;
    }
    
    .home-cta h2 {
        font-size: 2.5rem;
    }
    
    .home-popular-badge {
        top: -1.5rem;
        font-size: 0.8rem;
        padding: 0.6rem 1.5rem;
    }
}

@media (max-width: 480px) {
    .home-hero {
        padding: 6rem 0 4rem;
    }
    
    .home-hero h1 {
        font-size: 2.2rem;
    }
    
    .home-container {
        padding: 0 1rem;
    }
    
    .home-feature-card,
    .home-pricing-card {
        padding: 2rem 1.5rem;
    }
}

