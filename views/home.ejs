<!-- JavaScript for Interactive Features -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Pricing toggle functionality
    const pricingToggle = document.getElementById('pricing-toggle');
    const monthlyPrices = document.querySelectorAll('.monthly-price');
    const annualPrices = document.querySelectorAll('.annual-price');
    const monthlyNotes = document.querySelectorAll('.monthly-note');
    const annualNotes = document.querySelectorAll('.annual-note');
    
    if (pricingToggle) {
        pricingToggle.addEventListener('change', function() {
            if (this.checked) {
                // Show annual pricing
                monthlyPrices.forEach(el => el.style.display = 'none');
                monthlyNotes.forEach(el => el.style.display = 'none');
                annualPrices.forEach(el => el.style.display = 'inline');
                annualNotes.forEach(el => el.style.display = 'inline');
            } else {
                // Show monthly pricing
                monthlyPrices.forEach(el => el.style.display = 'inline');
                monthlyNotes.forEach(el => el.style.display = 'inline');
                annualPrices.forEach(el => el.style.display = 'none');
                annualNotes.forEach(el => el.style.display = 'none');
            }
        });
    }
    
    // Smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });
    
    // Add scroll animation for stats numbers
    const observerOptions = {
        threshold: 0.5,
        rootMargin: '0px 0px -100px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const target = entry.target;
                const countElement = target.querySelector('.stat-number[data-count]');
                if (countElement && !countElement.classList.contains('counted')) {
                    countElement.classList.add('counted');
                    animateNumber(countElement);
                }
            }
        });
    }, observerOptions);
    
    // Observe all stat items
    document.querySelectorAll('.stat-item').forEach(item => {
        observer.observe(item);
    });
    
    function animateNumber(element) {
        const target = parseInt(element.getAttribute('data-count'));
        const duration = 2000;
        const start = performance.now();
        
        function update() {
            const now = performance.now();
            const progress = Math.min((now - start) / duration, 1);
            const current = Math.floor(progress * target);
            
            if (element.textContent.includes('.')) {
                element.textContent = (current / 10).toFixed(1) + element.textContent.slice(-2);
            } else if (target >= 1000) {
                element.textContent = current.toLocaleString() + '+';
            } else {
                element.textContent = current + (element.textContent.includes('%') ? '%' : '');
            }
            
            if (progress < 1) {
                requestAnimationFrame(update);
            }
        }
        
        requestAnimationFrame(update);
    }
});
</script> 