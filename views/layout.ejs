    <script>
        // Initialize tutorial when page loads
        document.addEventListener('DOMContentLoaded', () => {
            // Wait a bit for all scripts to load
            setTimeout(() => {
                initializeHelpSystem();
            }, 500);
        });
        
        function initializeHelpSystem() {
            const pageType = detectPageType();
            
            // Add click handler for Help button first
            const helpBtn = document.getElementById('helpBtn');
            if (helpBtn) {
                helpBtn.addEventListener('click', (e) => {
                    e.preventDefault();
                    startTutorial();
                });
                
                // Add visual indicator if help hasn't been seen for this page
                if (!hasSeenHelp(pageType)) {
                    helpBtn.classList.add('help-available');
                    
                    // Add a small pulse animation (only once)
                    if (!document.getElementById('helpPulseStyle')) {
                        const style = document.createElement('style');
                        style.id = 'helpPulseStyle';
                        style.textContent = `
                            .help-available {
                                position: relative;
                            }
                            .help-available::after {
                                content: '';
                                position: absolute;
                                top: -2px;
                                right: -2px;
                                width: 8px;
                                height: 8px;
                                background: #f59e0b;
                                border-radius: 50%;
                                animation: helpPulse 2s infinite;
                            }
                            @keyframes helpPulse {
                                0%, 100% { transform: scale(1); opacity: 1; }
                                50% { transform: scale(1.2); opacity: 0.7; }
                            }
                        `;
                        document.head.appendChild(style);
                    }
                }
            }
            
            // Check if we should auto-show help
            if (shouldAutoShowHelp(pageType)) {
                // Check if advanced tutorial system exists and should run
                if (typeof checkAutoStartTutorial === 'function') {
                    // Override the tutorial system to use our tracking
                    const originalCheckAutoStart = window.checkAutoStartTutorial;
                    window.checkAutoStartTutorial = function() {
                        // Only run if we haven't seen help for this page
                        if (!hasSeenHelp(pageType)) {
                            originalCheckAutoStart();
                            markHelpAsSeen(pageType); // Mark as seen when tutorial runs
                        }
                    };
                    
                    // Call the original function
                    checkAutoStartTutorial();
                } else {
                    // Fallback: show interactive help for new users who haven't seen it
                    setTimeout(() => {
                        showInteractiveHelp(pageType);
                    }, 1000);
                }
            }
        }
        

        
        // Fix startTutorial function
        window.startTutorial = function() {
            // Prevent multiple help systems from running
            if (window.helpSystemActive) {
                console.log('Help system already active, ignoring manual start...');
                return;
            }
            
            const pageType = detectPageType();
            
            // Remove help indicator when manually clicked
            const helpBtn = document.getElementById('helpBtn');
            if (helpBtn) {
                helpBtn.classList.remove('help-available');
            }
            
            // Check if tutorial system is loaded
            if (typeof window.tutorialContent !== 'undefined' && typeof window.showTutorialStep === 'function') {
                console.log('Starting tutorial for page:', pageType);
                
                // Call the tutorial system directly
                if (window.tutorialContent[pageType]) {
                    window.helpSystemActive = true;
                    
                    // Set up tutorial variables
                    window.currentTutorial = window.tutorialContent[pageType];
                    window.currentStep = 0;
                    window.tutorialActive = true;
                    
                    // Start the tutorial
                    window.showTutorialStep();
                    window.createTutorialOverlay();
                    
                    // Mark as seen
                    markHelpAsSeen(pageType);
                } else {
                    showInteractiveHelp('general');
                }
            } else {
                // Tutorial system not loaded, show interactive help
                showInteractiveHelp(pageType);
            }
        };
        
        // Global help system state
        window.helpSystemActive = false;
        
        // Help tracking system
        function hasSeenHelp(pageType) {
            const seenHelp = JSON.parse(localStorage.getItem('goalTracker_helpSeen') || '{}');
            return seenHelp[pageType] === true;
        }
        
        function markHelpAsSeen(pageType) {
            const seenHelp = JSON.parse(localStorage.getItem('goalTracker_helpSeen') || '{}');
            seenHelp[pageType] = true;
            localStorage.setItem('goalTracker_helpSeen', JSON.stringify(seenHelp));
        }
        
        function shouldAutoShowHelp(pageType) {
            // Don't auto-show help if user has seen it before
            if (hasSeenHelp(pageType)) {
                return false;
            }
            
            // Only auto-show help for new users (you can customize this logic)
            const userCreatedAt = '<%= user ? user.created_at : "" %>';
            if (userCreatedAt) {
                const accountAge = Date.now() - new Date(userCreatedAt).getTime();
                const threeDaysInMs = 3 * 24 * 60 * 60 * 1000;
                
                // Only show auto-help for accounts less than 3 days old
                return accountAge < threeDaysInMs;
            }
            
            return false; // Don't show for guests
        }
        
        function resetAllHelp() {
            localStorage.removeItem('goalTracker_helpSeen');
            window.helpSystemActive = false; // Reset help system state
            
            // Close the current modal
            const modal = document.getElementById('helpModal');
            if (modal) {
                const bsModal = bootstrap.Modal.getInstance(modal);
                if (bsModal) {
                    bsModal.hide();
                }
            }
            
            // Remove help indicators and re-add them
            const helpBtn = document.getElementById('helpBtn');
            if (helpBtn) {
                helpBtn.classList.remove('help-available');
                
                // Re-add indicator for current page
                const pageType = detectPageType();
                if (!hasSeenHelp(pageType)) {
                    helpBtn.classList.add('help-available');
                }
            }
            
            // Show success message
            setTimeout(() => {
                alert('✅ Help reset successfully!\n\nHelp will now show automatically again when you visit pages for the first time.');
            }, 300);
        }
        
        // Interactive help system
        function showInteractiveHelp(pageType) {
            // Prevent multiple help systems from running
            if (window.helpSystemActive) {
                console.log('Help system already active, skipping...');
                return;
            }
            
            window.helpSystemActive = true;
            const helpContent = getHelpContent(pageType);
            createHelpModal(helpContent, pageType);
        }
        
