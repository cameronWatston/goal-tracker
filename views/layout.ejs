        function createHelpModal(helpContent, pageType) {
            // Prevent multiple modals from opening
            if (document.getElementById('helpModal')) {
                console.log('Help modal already exists, skipping...');
                return;
            }
            
            // Check if any other modal is currently open
            const existingModals = document.querySelectorAll('.modal.show');
            if (existingModals.length > 0) {
                console.log('Another modal is open, skipping help modal...');
                return;
            }
            
            // Mark help as seen for this page
            if (pageType) {
                markHelpAsSeen(pageType);
