            margin-bottom: 4px;
            font-size: 0.875rem;
            display: inline-block;
            width: auto;
            text-align: left;
            white-space: normal;
            word-break: normal;
            line-height: 1.4;
        }
        
        td .metric-item, td .metrics-list li {
            display: block;
            width: 100%;
        }
        
        /* Badge styling */
        .badge {
            font-weight: 600;
            padding: 0.35em 0.65em;
            border-radius: 6px;
            letter-spacing: 0.03em;
        }
        
        /* Improved alert styling */
        .alert {
            border-radius: 10px;
            border: none;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
        }
        
        /* Modal styling */
        .modal-content {
            border-radius: 15px;
            border: none;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        }
        
        .modal-header {
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            padding: 1.5rem;
        }
        
        .modal-footer {
            border-top: 1px solid rgba(0, 0, 0, 0.05);
            padding: 1.5rem;
        }
        
        .modal-body {
            padding: 1.5rem;
        }

        /* Ultra-Modern Navbar Styles */
        .modern-navbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
