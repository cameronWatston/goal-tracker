            document.getElementById('helpModal').addEventListener('hidden.bs.modal', function() {
                window.helpSystemActive = false; // Reset help system state
                this.remove();
            });
        }
        
        // Helper function to detect page type
        function detectPageType() {
            const path = window.location.pathname;
            if (path === '/' || path === '/home') return 'home';
            if (path.includes('/dashboard') || path.includes('/goals/dashboard')) return 'dashboard';
            if (path.includes('/goals/detail')) return 'goal-detail';
            if (path.includes('/community')) return 'community';
            if (path.includes('/friends')) return 'friends';
            if (path.includes('/messages')) return 'messages';
            return 'general';
        }
        
        // Function to start tutorial for specific page
        function startTutorialForPage(pageType) {
            // This will be handled by the tutorial.js file
            if (window.tutorialContent && window.tutorialContent[pageType]) {
                // Trigger tutorial
                const event = new CustomEvent('startTutorial', { detail: { pageType } });
                document.dispatchEvent(event);
            }
        }
